<section class="contributions-section">
  <h1>
    <a href="/">Projects</a>
  </h1>
  <h2><%= @user.login =%> has contributed to <%= @user.projects.count =%> projects</h2>
  <h3>with <%= @user.contributions.count =%> contributions</h3>
  <section class="members-container">
    <% @projects.each do |project| %>
      <%= link_to contributions_path(project.id), class: 'member-card' do %>
        <article>
          <img src="https://avatars0.githubusercontent.com/u/15347577?v=4" class="member-picture"/>
          <h1 class="member-name"><%= project.name=%></h1>
          <h1 class="member-name"><%= project.total_contributions =%></h1>
        </article>
      <% end %>
    <% end %>
  </section>
</section>
